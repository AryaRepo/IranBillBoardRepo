<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="20dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff5a5f"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_weight="0.9"
            android:paddingRight="8dp"
            android:text="بازیابی رمز عبور"
            android:textColor="#FFF"
            android:textSize="@dimen/app_title_text_view"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:text="جهت انجام روند مرحله فراموشی رمز عبور،  شماره تلفنی که با آن ثبت نام کردید را وارد کنید."
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edt_PasswordRecoveryPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edt_height"
        android:layout_marginLeft="@dimen/login_edit_text_margin"
        android:layout_marginRight="@dimen/login_edit_text_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_edt_style"
        android:gravity="right|center_vertical"
        android:hint="شماره تلفن خود را وارد کنید"
        android:inputType="textPassword"
        android:paddingRight="5dp"
        android:textColor="@color/login_edt_text_color"
        android:textColorHint="@color/login_edt_hint_color"
        android:textSize="@dimen/app_normal_edit_text"/>
    <RelativeLayout
        android:id="@+id/rel_layout_signin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/edt_login_password"
        android:layout_marginLeft="@dimen/login_edit_text_margin"
        android:layout_marginRight="@dimen/login_edit_text_margin"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_btn_style">

        <ImageButton
            android:id="@+id/dlg_img_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:src="@drawable/ic_arow_right_white"/>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/dlg_img_arrow"
            android:background="#fff"/>

        <Button
            android:id="@+id/btn_PasswordRecoverySend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:text="ارسال"
            android:textColor="#fff"
            />
    </RelativeLayout>
</LinearLayout>