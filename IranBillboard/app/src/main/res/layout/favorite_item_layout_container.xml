<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="195dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/Favorite_btn_Delete"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_delete"/>

            <TextView
                android:id="@+id/Favorite_txtBoardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Favorite_btn_Delete"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="نام تابلو ی موردعلاقه"
                android:textColor="#000"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/Favorite_txtCategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Favorite_txtBoardName"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="نام دسته بندی تابلو"
                android:textColor="#000"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/Favorite_txtBoardPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Favorite_txtCategoryTitle"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="قیمت تابلو ی مورد علاقه"
                android:textColor="#000"
                android:textSize="11sp"/>

            <Button
                android:id="@+id/Favorite_btn_ShowDetail"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:text="مشاهده جزئیات"
                android:textSize="13sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>