<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_similar_board_photo"
            android:layout_marginTop="8dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/no_img"
            android:padding="2dp"
            app:civ_border_color="#FFF"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/txt_similar_board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_similar_board_photo"
            android:layout_alignRight="@id/img_similar_board_photo"
            android:layout_below="@+id/img_similar_board_photo"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:maxEms="15"
            android:text="نام تابلو"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12dp"/>

    </RelativeLayout>