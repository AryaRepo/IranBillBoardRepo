<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Profile_img_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/no_img"
                   android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_shape_shadow"
                    android:padding="5dp"/>
                <Button
                    android:id="@+id/btn_chooseImage"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="انتخاب عکس"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_Edt_Name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_edt_height"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="نام "
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_Edt_Family"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_edt_height"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="نام خانوادگی "
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_Edt_FirstPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_edt_height"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:hint="تلفن ثابت خانه-شرکت"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="phone"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="تلفن اول"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_Edt_SecondPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_edt_height"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="phone"
                        android:hint="تلفن دوم دفتر-شرکت (اختیاری)"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="تلفن دوم"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_edt_Mobile"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_edt_height"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:maxLength="11"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="phone"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="شماره موبایل"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_edt_Email"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_edt_height"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:hint="ایمیل(اختیاری)"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="textEmailAddress"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="ایمیل"
                        android:textColor="#000"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btn_choose_birth_date"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="انتخاب تاریخ"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/txt_birth_date"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/login_edt_height"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/edit_text_border"
                            android:text="تاریخ تولدتان"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:textSize="11sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="تاریخ تولد"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/Profile_sp_states"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_edt_height"
                            android:layout_marginBottom="8dp"
                            android:textSize="11sp"/>

                        <Spinner
                            android:id="@+id/Profile_sp_city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_edt_height"
                            android:layout_marginBottom="8dp"
                            android:textSize="11sp"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="شهر/استان"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_edt_Address"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="آدرس"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Profile_edt_about_me"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/login_edt_style"
                        android:gravity="center_horizontal|center_vertical"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="درباره من"
                        android:textColor="#000"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/line_divider"/>

                <Button
                    android:id="@+id/Profile_btn_SaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_btn_style"
                    android:text="ثبت تغییرات"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
